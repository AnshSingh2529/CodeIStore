<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_dialogbox"
        android:padding="12dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/cancelBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/cancelbtn"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/close"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/logo"
                android:scaleType="centerInside"
                android:src="@drawable/ic_codestore" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="@drawable/bg_info"
            android:orientation="horizontal"
            android:padding="12dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/profileChange"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/black"
                android:elevation="2dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/profilebtn"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person"
                    app:tint="@color/white" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/user_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/users_username"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/users_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/users_email"
                    android:textColor="@color/DarkGray"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/account_setup_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_accountsetup"
                    android:padding="8dp"
                    android:text="@string/account_setup"
                    android:textColor="@color/LightGray"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:background="@drawable/bg_dialog_opt"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/managing_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:paddingVertical="6dp"
                android:text="@string/managing_apps"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_manage"
                app:drawableTint="@color/black"  />

            <TextView
                android:id="@+id/notify_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:paddingVertical="6dp"
                android:text="@string/notifications_and_offers"
                android:textColor="@color/black"
                android:textSize="12sp"                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_notify"
                app:drawableTint="@color/black" />

            <TextView
                android:id="@+id/payments_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:paddingVertical="6dp"
                android:text="@string/payments_and_subscriptions"
                android:textColor="@color/black"
                android:textSize="12sp"                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_payments"
                app:drawableTint="@color/black"  />

            <TextView
                android:id="@+id/privacy_policy_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:paddingVertical="6dp"
                android:text="@string/privacy_and_security"
                android:textColor="@color/black"
                android:textSize="12sp"                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_privacy"
                app:drawableTint="@color/black"  />

            <TextView
                android:id="@+id/library_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:paddingVertical="6dp"
                android:text="@string/library"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_library"
                app:drawableTint="@color/black"  />

            <TextView
                android:id="@+id/app_pass_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:paddingVertical="6dp"
                android:text="@string/app_pass"
                android:textColor="@color/black"
                android:textSize="12sp"                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_apppass"
                app:drawableTint="@color/black"  />

            <TextView
                android:id="@+id/points_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:paddingVertical="6dp"
                android:text="@string/points"
                android:textColor="@color/black"
                android:textSize="12sp"                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_points"
                app:drawableTint="@color/black"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:background="@color/appbar"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/settings_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:paddingVertical="8dp"
                android:text="@string/settings"
                android:textColor="@color/black"
                android:textSize="12sp"                android:textStyle="bold"
                app:drawableStartCompat="@drawable/settings"
                app:drawableTint="@color/black"  />

            <TextView
                android:id="@+id/help_feedback_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:paddingVertical="8dp"
                android:text="@string/helps_and_feedback"
                android:textColor="@color/black"
                android:textSize="12sp"                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_help"
                app:drawableTint="@color/black"  />
            <Button
                android:id="@+id/signOut_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="@string/logout"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <TextView
                android:id="@+id/privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/privacy_policy"
                android:textColor="@color/LightGray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginHorizontal="8dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="2.5dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/Term_services"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/Term_services"
                android:textColor="@color/LightGray"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
